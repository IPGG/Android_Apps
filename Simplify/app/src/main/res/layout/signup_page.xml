<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Welcome to Simplify"
            android:textColor="#43697A"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Work smarter not harder!"
            android:textColor="#43697A"
            android:textSize="17dp" />

        <!--<ImageView
            android:id="@+id/profilePicture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person" />-->

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/Status"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Fill in your data"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:textColor="#43697A"/>

        <EditText
            android:id="@+id/FirstName"
            android:hint="First Name"
            android:textColorHint="#43697A"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="3dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/LastName"
            android:hint="Last Name"
            android:textColorHint="#43697A"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_username"
            android:drawablePadding="3dp"
            android:inputType="text"/>

        <EditText
            android:id="@+id/mail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_mail_login"
            android:drawablePadding="3dp"
            android:hint="Email Adress"
            android:inputType="textEmailAddress"
            android:textColorHint="#43697A" />

        <EditText
            android:id="@+id/passwd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_passlock"
            android:drawablePadding="3dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#43697A" />

        <EditText
            android:id="@+id/conf_passwd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_passlock"
            android:drawablePadding="3dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColorHint="#43697A" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="175dp"
            android:layout_height="55dp"
            android:background="@drawable/filed_purple_button"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/return_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I already have an account!"
            android:layout_marginTop="9dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#43697A"
            android:layout_gravity="center"
            android:clickable="true"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>